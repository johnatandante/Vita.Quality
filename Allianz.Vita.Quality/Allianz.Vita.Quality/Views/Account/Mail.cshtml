@model Allianz.Vita.Quality.Models.MailCredentialsViewModel
@{
    ViewBag.Title = "Mail Settings";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div id="menuSettings" class="col-md-4">
        @Html.Partial("_AccountSettingsPartial")
    </div>
    <div class="col-md-8">
        <section id="connectionForm">

            <h3>Setup your Jira Account</h3>
            @using (Html.BeginForm("UpdateMailSettings", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.Partial("_AccountCommonSettingsPartial")                

                <div>
                    <h4>Archive Folder</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.DefaultSender, new { @class = "col-md-4 control-label" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.DefaultSender, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.IssueFolderPath, new { @class = "col-md-4 control-label" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.IssueFolderPath, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.IssueFolderPath, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.CompletedFolderPath, new { @class = "col-md-4 control-label" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.CompletedFolderPath, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

