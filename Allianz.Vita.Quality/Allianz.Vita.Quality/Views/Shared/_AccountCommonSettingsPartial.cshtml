@model Allianz.Vita.Quality.Models.BaseCredentialsViewModel
<div>
    <h4>Configuration Data</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.ServiceName, new { @class = "col-md-4 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Url, new { @class = "col-md-4 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>
