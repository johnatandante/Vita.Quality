@model Allianz.Vita.Quality.Models.MailItemToDefectViewModel
@{
    ViewBag.Title = "Convert Mail to Defect";
}

@using (Html.BeginForm("Create", "Defect", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {

    @Html.AntiForgeryToken()
    @Html.Hidden("Title", Model.Defect.Title)

    <h2>New Defect @Model.Defect.Title</h2>

    <div class="form-group">
        @Html.LabelFor(m => m.Defect.AreaPath, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.AreaPath, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.SurveySystem, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.SurveySystem, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.DefectID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.DefectID, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.FoundIn, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.FoundIn, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.Agency, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.Agency, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.Environment, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.Environment, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.DefectType, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.DefectType, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.Severity, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.Severity, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.State, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Defect.State, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Defect.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Defect.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <table class="table">
            <tbody>
                <tr>
                    <th>
                        @Html.LabelFor(m => m.Defect.Comments)
                    </th>

                </tr>
                @foreach (var comment in Model.Defect.Comments) {
                    <tr>
                        <td>
                            @Html.TextAreaFor(modelItem => comment)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <table class="table">
            <tbody>
                <tr>
                    <th>
                        @Html.LabelFor(m => m.Defect.Attachment)
                    </th>

                </tr>
                @foreach (var attachment in Model.Defect.Attachment) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => attachment.Title)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Insert" />
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
